instrumentation_methods :chain, :prepend

if RUBY_VERSION >= '2.2.2'
  gemfile <<-RB
    gem 'rack'
    gem 'redis', '~>4.2.5'
    #{ruby3_gem_webrick}
  RB

  gemfile <<-RB
    gem 'rack'
    gem 'redis', '~>4.0.1'
    #{ruby3_gem_webrick}
  RB
end

# newest redis version on ruby 2.0
gemfile <<-RB
  gem 'rack'
  gem 'redis', '~>3.3.5'
  #{ruby3_gem_webrick}
RB
